@model www.yasinkaya.org.Entities.Dtos.CategoryListDto
@using www.yasinkaya.org.Shared.Utilities.Result.ComplexTypes
@{
    Layout = "_Layout";
    ViewBag.Title = "Kategoriler Index";
}

@if (Model.ResultStatus == ResultStatus.Success)
{
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            DataTable Example
        </div>
        <div class="table-responsive">
            <div class="card-body">
                <table class="table table-bordered" id="categoriesTable" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Ad</th>
                            <th>Açıklaması</th>
                            <th>Aktif Mi?</th>
                            <th>Silinmiş Mi?</th>
                            <th>Yaratma Tarihi</th>
                            <th>Yaratan Kişi</th>
                            <th>Düzenleme Tarihi</th>
                            <th>Düzenleyen Kişi</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Ad</th>
                            <th>Açıklaması</th>
                            <th>Aktif Mi?</th>
                            <th>Silinmiş Mi?</th>
                            <th>Yaratma Tarihi</th>
                            <th>Yaratan Kişi</th>
                            <th>Düzenleme Tarihi</th>
                            <th>Düzenleyen Kişi</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var category in Model.Categories)
                        {
                            <tr>
                                <td>@category.Id</td>
                                <td>@category.Name</td>
                                <td>@category.Description</td>
                                <td>@category.IsActive</td>
                                <td>@category.IsDeleted</td>
                                <td>@category.CreatedDate</td>
                                <td>@category.CreatedByName</td>
                                <td>@category.ModifiedDate</td>
                                <td>@category.ModifiedByName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#categoriesTable').DataTable();
        });
    </script>
}